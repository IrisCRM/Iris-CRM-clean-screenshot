<head>
<style>
tr {
        white-space: nowrap;
}
p {
        padding: 2px;
        margin: 2px;
}
table {
        padding-bottom: 10px;
}
</style>
<script type="text/javascript" src="j"></script>

<script>

//Показать бельмо
function showBelmo() {
        chrome.tabs.executeScript(null, {
                code: "$('#maintable').after('"+
                        "<div id=\"belmo\" style=\"position: absolute; "+
                        "left: 0; top: 0; width: 100%; height: 100%; "+
                        "z-index: 1; background-color: white\"/>');"
        });
}

//Убрать бельмо
function hideBelmo() {
        chrome.tabs.executeScript(null, {
                code: "$('#belmo').remove();"
        });
}

//Добавить отсутп справа
function addRightBorder() {
        chrome.tabs.executeScript(null, {
                code: "$('#grid_area').after('"+
                        "<td id=\"rightborder\" style=\"width: 30px;\">&nbsp;</td>');"
        });
}

//Убрать отсутп справа
function removeRightBorder() {
        chrome.tabs.executeScript(null, {
                code: "$('#rightborder').remove();"
        });
}

</script>
</head>

<body>
<table>
  <tr>
    <td colspan=2><p>Скриншот карточки</p></td>
  </tr>
  <tr>
    <td><button onclick="showBelmo()">Очистить фон</button></td>
    <td><button onclick="hideBelmo()">Отменить</button></td>
  </tr>
  <tr>
    <td colspan=2><p>Скриншот таблицы</p></td>
  </tr>
  <tr>
    <td><button onclick="addRightBorder()">Добавить отсутп справа</button></td>
    <td><button onclick="removeRightBorder()">Отменить</button></td>
  </tr>
</table>
</body>
